<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>repl.it</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <script>
      let start,curr=prompt("Enter an amount of money (in cents)"),coins=[25,10,5,1],
      ans=[0,0,0,0]; //number of times that each coin was used
      start=parseInt(curr);
      while (start!=curr||start<0) { //checks if number is valid
          curr=prompt("Enter a valid number");
          start=parseInt(curr);
      }
      start=curr;
      for (let i=0;i<4;i++) { //iterate through all possible coins
      while (curr>=coins[i]) {curr-=coins[i],ans[i]++;} //if current total greater than coin, use the coin (also minimizes number of total used coins :D [greedy solution])
      }
      let Ans=String(start)+" cents, in coins, is "+String(ans[0])+" quarter(s), "+String(ans[1])+" dime(s), "+String(ans[2])+" nickel(s), "+String(ans[3])+" pennies"; //concatenating strings to create the answer
      document.write(Ans); //displaying the answer
    </script>
  </body>
</html>
